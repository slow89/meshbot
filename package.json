{
  "name": "meshbot",
  "version": "0.1.0",
  "description": "Lightweight networking layer for Claude Code â€” lets named agent instances on different servers communicate securely via HTTPS + pre-shared keys",
  "type": "module",
  "license": "MIT",
  "bin": {
    "meshbot": "./dist/bin/meshbot.js",
    "mesh": "./dist/bin/meshbot.js",
